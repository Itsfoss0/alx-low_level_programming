#!/usr/bin/env make
# make file with PHONY targets

#phony targets
.PHONY: clean
.PHONY: oclean
.PHONY: fclean
.PHONY: re

#variables
CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = fclean

#targets
all: $(SRC) $(OBJ)
	@$(CC) $(OBJ) -o $(NAME)
clean:
	rm -f *.~ *.# $(NAME)
oclean:
	rm -rf *.o
fclean:
	rm -f *.~ *.# $(NAME) *.o
re:
	$(CC) $(SRC) -o $(NAME) 
