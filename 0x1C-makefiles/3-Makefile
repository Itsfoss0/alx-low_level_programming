#!/usr/bin/env make
# make file with PHONY targets

#variables
CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = 

#targets
all: $(SRC) $(OBJ)
	@$(CC) $(OBJ) -o $(NAME)
clean:
	rm -f *.~ *.# $(NAME)
oclean:
	rm -rf *.o
fclean:
	rm -f *.~ *.# $(NAME) *.o
re:
	$(CC) $(SRC) -o $(NAME) 
